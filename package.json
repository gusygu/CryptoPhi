{
  "name": "cryptopi-dynamics",
  "version": "0.1.0",
  "packageManager": "pnpm@9.0.0",
  "private": true,
  "type": "module",
  "ts-node": {
    "project": "tsconfig.scripts.json"
  },
  "engines": {
    "node": "22.x"
  },
  "scripts": {
    "dev:web": "next dev -p 3000",
    "dev:jobs": "tsx src/scripts/jobs/run-all.ts",
    "kill:3000": "pwsh -NoProfile -Command \"Get-NetTCPConnection -LocalPort 3000 -State Listen | ForEach-Object { Stop-Process -Id $_.OwningProcess -Force }\"",
    "dev": "next dev -p 3000",
    "build": "cross-env NODE_ENV=production next build",
    "start": "next start -p 3000",
    "lint": "eslint .",
    "system:refresh": "node --import tsx src/scripts/system/refresh.mts",
    "db:clean": "tsx src/scripts/db/clean-db.mts --force",
    "db:ddl": "tsx src/scripts/db/run-ddls.mts",
    "run-ddl": "pnpm db:ddl",
    "db:reset": "run-s db:clean db:ddl",
    "db:seed:bootstrap": "tsx src/scripts/jobs/seed-bootstrap.ts",
    "worker:sampler": "tsx src/scripts/jobs/str-aux-runner.ts",
    "db:auto-ingest": "tsx src/scripts/jobs/auto-ddl-ingest.mts",
    "smoke:settings:doctor": "node --import tsx --env-file=.env src/scripts/smokes/smoke-settings-doctor.mts",
    "job:mat:snapshot": "node --import tsx --env-file=.env src/scripts/jobs/matrices-snapshot.mts",
    "job:str:runner": "tsx src/scripts/jobs/str-aux-runner.ts",
    "smoke:doctor:matrices": "node --import tsx --env-file=.env src/scripts/smokes/doctor-matrices-storage.mts",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@getbrevo/brevo": "^3.0.1",
    "@types/ws": "^8.18.1",
    "autoprefixer": "^10.4.21",
    "cross-env": "^7.0.3",
    "gray-matter": "^4.0.3",
    "next": "15.5.2",
    "nodemailer": "^7.0.11",
    "postcss": "^8.5.6",
    "pg": "^8.16.3",
    "dotenv": "^17.2.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "remark": "^15.0.1",
    "remark-html": "^16.0.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.6.2",
    "@types/node": "^20.12.12",
    "@types/react": "^18.3.5",
    "swr": "^2.3.6",
    "ws": "^8.18.3",
    "vitest": "^2.1.9",
    "yargs": "^18.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@playwright/test": "^1.47.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.10.0",
    "eslint-config-next": "15.5.2",
    "npm-run-all": "^4.1.5",
    "start-server-and-test": "^2.0.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.5",
    "zod": "^3.23.8"
  },
  "description": "**CryptoPi Dynamics** is an autonomous framework for quantitative analysis and orchestration of cryptocurrency market data.  \r It unifies ingestion, structural processing, and statistical synthesis across multiple dynamic modules.",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gusygu/CryptoPhi.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/gusygu/CryptoPhi/issues"
  },
  "homepage": "https://github.com/gusygu/CryptoPhi#readme"
}
